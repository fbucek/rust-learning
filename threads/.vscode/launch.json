    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Unittest",
            "cargo": {
                "args": [
                    "test",
                    "--all",
                    "--lib",
                    "--package=looplib"
                ],
                "filter": {
                    "name": "looplib",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Threads",
            "cargo": {
                "args": [
                    "run",
                    "--bin=threads",
                    "--package=threads"
                ],
                "filter": {
                    "name": "threads",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
